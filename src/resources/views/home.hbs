<div class="mt-4">
  <div class="row">
    {{#each products}}
      <div class="col col-lg-3">
        <div class="card product-item" style="width: 18rem;">
          <a href="/products/{{this.slug}}">
            <img
              class="card-img-top"
              src="{{this.img}}"
              alt="{{this.name}}"
            /></a>
          <div class="card-body">
            <a href="/products/{{this.slug}}">
              <h5 class="card-title product-name">{{this.name}}</h5></a>
            <p class="card-text">{{this.description}}</p>
            <a href="#" class="btn btn-primary product-button">MUA</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>